{% extends 'base.html.twig' %}

{% block title %}Galería{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    {{ parent() }}
    <div class="example-wrapper">
        <h1>Galería de Imágenes</h1>
        {% for message in app.flashes('exito') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        {{ form(formulario) }}
        <hr class="divider">
        <div class="imagenes_galeria">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Imagen</th>
                    <th scope="col">Categoría</th>
                    <th scope="col">Visualizaciones</th>
                    <th scope="col">Likes</th>
                    <th scope="col">Descargas</th>
                </tr>
                </thead>
                <tbody>
               {% for imagen in imagenes  %}
                <tr>
                    <th scope="row">{{ imagen.id }}</th>
                    <td><img src="{{ asset('uploads/imagenes/') }}{{ imagen.nombre }}" width="100px" alt="{{ imagen.descripcion }}" title="{{ imagen.descripcion }}"></td>
                    <td>{{ imagen.categoria }}</td>
                    <td>{{ imagen.numVisualizaciones }}</td>
                    <td>{{ imagen.numLikes }}</td>
                    <td>{{ imagen.numDownloads }}</td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
