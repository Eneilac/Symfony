{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    {{ parent() }}

    <div id="index">

        <!-- Header -->
        <div class="row">
            <div class="col-xs-12 intro">
                <div class="carousel-inner">
                    <div class="item active">
                        <img class="img-responsive" src="images/index/woman.jpg" alt="header picture">
                    </div>
                    <div class="carousel-caption">
                        <h1>FIND NICE PICTURES HERE</h1>
                        <hr>
                    </div>
                </div>
            </div>
        </div>

        <div id="index-body">
            <!-- Pictures Navigation table -->
            <div class="table-responsive">
                <table class="table text-center">
                    <thead>
                    <tr>
                        <td><a class="link {{app.request.get('category') == '1' ? 'active'}} {{app.request.get('category') == null ? 'active'}}" href="/?category=1">category I</a></td>
                        <td><a class="link {{app.request.get('category') == '2' ? 'active'}}" href="/?category=2">category II</a></td>
                        <td><a class="link {{app.request.get('category') == '3' ? 'active'}}" href="/?category=3">category III</a></td>
                    </tr>
                    </thead>
                </table>
                <hr>
            </div>

            <!-- Navigation Table Content -->
            <div class="tab-content">
                <!-- First Category pictures -->
                <div id="1">
                    <div class="row popup-gallery">
                        <!-- categoria de imagenes -->
                        {% for imagen in imagenes %}

                            <div class="col-xs-12 col-sm-6 col-md-3">
                                <div class="sol">
                                    <img class="img-responsive" style="height: 250px"
                                         src="{{ asset('uploads/imagenes/') }}{{ imagen.nombre }}"
                                         alt="imagen.descripcion">
                                    <div class="behind">
                                        <div class="head text-center">
                                            <ul class="list-inline">
                                                <li>
                                                    <a class="gallery" href=""
                                                       data-toggle="tooltip" data-original-title="Quick View">
                                                        <i class="fa fa-eye"></i>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="#" data-toggle="tooltip"
                                                       data-original-title="Click if you like it">
                                                        <i class="fa fa-heart"></i>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="#" data-toggle="tooltip" data-original-title="Download">
                                                        <i class="fa fa-download"></i>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="{{ path('find_by_one',{id:imagen.id}) }}" data-toggle="tooltip"
                                                       data-original-title="More information">
                                                        <i class="fa fa-info"></i>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                        <div class="row box-content">
                                            <ul class="list-inline text-center">
                                                <li><i class="fa fa-eye"></i>{{ imagen.numVisualizaciones }}</li>
                                                <li><i class="fa fa-heart"></i>{{ imagen.numLikes }}</li>
                                                <li><i class="fa fa-download"></i>{{ imagen.numDownloads }}</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        {% endfor %}

                    </div>
                    <nav class="text-center">
                        <ul class="pagination">
                            <li class="active"><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#" aria-label="suivant">
                                    <span aria-hidden="true">&raquo;</span>
                                </a></li>
                        </ul>
                    </nav>
                </div>
                <!-- Third Category Pictures -->

            </div>
            <!-- End of Navigation Table Content -->

        </div><!-- End of Index-body box -->

        <!-- Newsletter form -->
        <div class="index-form text-center">
            <h3>SUSCRIBE TO OUR NEWSLETTER </h3>
            <h5>Suscribe to receive our News and Gifts</h5>
            <form class="form-horizontal">
                <div class="form-group">
                    <div class="col-xs-12 col-sm-6 col-sm-push-3 col-md-4 col-md-push-4">
                        <input class="form-control" type="text" placeholder="Type here your email address">
                        <a href="" class="btn btn-lg sr-button">SUBSCRIBE</a>
                    </div>
                </div>
            </form>
        </div>
        <!-- End of Newsletter form -->

        <!-- Box within partners name and logo -->
        <div class="last-box row">
            <div class="col-xs-12 col-sm-4 col-sm-push-4 last-block">
                <div class="partner-box text-center">
                    <p>
                        <i class="fa fa-map-marker fa-2x sr-icons"></i>
                        <span class="text-muted">35 North Drive, Adroukpape, PY 88105, Agoe Telessou</span>
                    </p>
                    <h4>Our Main Partners</h4>
                    <hr>
                    <div class="text-muted text-left">
                        <!-- Aqui van los asociados  -->
                        {% for asociado in asociados %}
                            <ul class="list-inline">
                                <li><img src="{{ asset('uploads/imagenes/') }}{{ asociado.logo }}" style="width: 50px"
                                         alt="{{ asociado.descripcion }}"></li>
                                <li>{{ asociado.nombre }}</li>
                            </ul>

                        {% endfor %}
                        <!-- End of Box within partners name and logo -->
                    </div><!-- End of index box -->
                </div>
            </div>
        </div>
    </div>
    <!-- Footer -->
    <footer class="home-page">
        <div class="container text-muted text-center">
            <div class="row">
                <ul class="nav col-sm-4">
                    <li class="footer-number"><i class="fa fa-phone sr-icons"></i> (00228)92229954</li>
                    <li><i class="fa fa-envelope sr-icons"></i> kouvenceslas93@gmail.com</li>
                    <li>Photography Fanatic Template &copy; 2017</li>
                </ul>
                <ul class="list-inline social-buttons col-sm-4 col-sm-push-4">
                    <li><a href="#"><i class="fa fa-facebook sr-icons"></i></a>
                    </li>
                    <li><a href="#"><i class="fa fa-twitter sr-icons"></i></a>
                    </li>
                    <li><a href="#"><i class="fa fa-google-plus sr-icons"></i></a>
                    </li>
                </ul>
            </div>
        </div>
    </footer>
{% endblock %}
{% block footer %}
{% endblock %}

